# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

PUT     /patient                    controllers.PharmController.createPatient

PUT 	/doctor						controllers.PharmController.createDoctor

PUT 	/pharmcist					controllers.PharmController.createPharmcist

GET 	/doctor/:id				controllers.PharmController.findDoc(id)

GET 	/patient/:id				controllers.PharmController.findPatient(id)

GET 	/pharmcist/:id				controllers.PharmController.findPharmcist(id)

PUT 	/patient/:id/prescription		controllers.PharmController.requestPatientPrescriptionAccess(id)

POST 	/patient/:id/prescription				controllers.PharmController.updatePrescriptionStatus(id)
